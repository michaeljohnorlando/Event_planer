<h1> This is the Login page </h1>

<%= form_for @user, url: 'login' do |f|  %>

<input name="authenticity_token"
       type="hidden"
       value="<%= form_authenticity_token %>"/>

  <%=f.label :name%>    <%=f.text_field :name, class: 'form-control'%><br>
  <%=f.label :password%><%=f.password_field :password, class: 'form-control'%><br>
 <%= f.submit "login" %>
<% end %>
